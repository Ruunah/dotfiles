
[[blocks]]
type = "prompt"
alignment = "left"

  [[blocks.segments]]
  type = "text"
  style = "plain"
  foreground = "#ffffff"
  background = "transparent" 
  template = "╭─" 

  [[blocks.segments]]
  type = "text"
  style = "plain"
  foreground = "#ffffff"
  background = "#61AFEF" 
  template = " "

  [[blocks.segments]]    
  type = "os"
  style = "diamond"
  leading_diamond = ""
  foreground = "#ffffff"
  background = "#61AFEF" 

  [[blocks.segments]]    
  type = "session"
  style = "powerline"
  powerline_symbol = ""
  foreground = "#ffffff"
  background = "#61AFEF"
  template = "{{ .UserName }} "

  [[blocks.segments]]
  type = "path"
  style = "powerline"
  powerline_symbol = ""
  foreground = "#ffffff"
  background = "#ffafd2"

    [blocks.segments.properties]
    style = "agnoster_full"
    home_icon = ""
    folder_icon = "󰉋"
    folder_separator_icon = " ❯ "

[[blocks]]
type = "prompt"
alignment = "left"
newline = true

  [[blocks.segments]]
  type = "text"
  style = "plain"
  foreground = "#ffffff"
  background = "transparent" 
  template = "╰─" 

[transient_prompt]
  foreground = "#ffffff"
  background = "#ffafd2"
  template = "<#61AFEF,transparent></><transparent,#61AFEF>{{ .Folder }}</><#61AFEF,transparent> </>"
